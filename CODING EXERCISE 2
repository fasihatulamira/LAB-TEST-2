package labtest2;

import java.util.Scanner;

public class no5 {
	public static void main(String [] args) {
		Scanner sc=new Scanner(System.in);
		 float radius,base,height;
	     double baseArea, surfaceArea, volume;
		 
		 System.out.println("Enter the base: ");
		 base=sc.nextFloat();
		 double num=(float)base;
		 
		 System.out.println("Enter the radius: ");
		 radius=sc.nextFloat();
		 double num1=(float)radius;
		 
		 System.out.println("Enter the height: ");
		 height=sc.nextFloat();
		 double num2=(float)height;
		 
		 
		 baseArea = Math.PI * num1 * num1;
		 surfaceArea = 2.0 * Math.PI * num1 + 2.0 * baseArea;
		 volume = baseArea * num2;
		 
		 System.out.printf("the base area is %.2f" ,baseArea); 
		 System.out.printf("\nthe surface area is %.2f" ,surfaceArea); 
		 System.out.printf("\nthe volume is %.2f" ,volume); 
		 
		 
	}
	}

